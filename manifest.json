{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "Auto Next Page Reader â€” Hindi",
  "short_name": "ANPR Hindi",
  "version": "3.1.0",
  "description": "Read novels aloud in Hindi or English with male/female voice options + auto-next chapter.",
  "homepage_url": "https://github.com/sasmalgiri/auto-next-page-reader",
  "permissions": ["activeTab", "storage", "scripting", "webNavigation", "tts"],
  "optional_host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "__MSG_actionTitle__",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
